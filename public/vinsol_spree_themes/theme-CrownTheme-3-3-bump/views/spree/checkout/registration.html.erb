<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
<h1 class="page-title"><%= Spree.t(:registration) %></h1>
<div id="registration" class="row" data-hook>
  <div id="account">
    <%= render :partial => 'new_user' %>
  </div>
  <% if Spree::Config[:allow_guest_checkout] %>
    <div class="col-md-6 login-page">
      <div class="panel panel-default text-center">
        <div class="panel-heading text-center ">
          <h3 class="page-title"><%= Spree.t(:guest_user_account) %></h3>
        </div>
        <div id="guest_checkout" class="panel-body" data-hook>
          <%= form_for @order, :url => update_checkout_registration_path, :method => :put, :html => { :id => 'checkout_form_registration' } do |f| %>
            <p>
              <%= f.email_field :email, :class => 'form-control title', :placeholder => Spree.t(:email) %>
            </p>
            <p><%= f.submit Spree.t(:continue), :class => 'btn btn-default' %></p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>
