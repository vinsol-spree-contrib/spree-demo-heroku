<% @body_id = 'signup' %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
<div class="col-md-6 col-md-offset-3 login-page">
  <div class="panel panel-default text-center ">
      <div class="panel-heading form-heading text-center">
        <h1 class="page-title text-center"><%= Spree.t(:new_customer) %></h1>
    </div>
      <div id="new-customer" class="panel-body" data-hook="login">
          <%= form_for resource, :as => :spree_user, :url => spree.registration_path do |f| %>
            <div data-hook="signup_inside_form">
              <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
              <p><%= f.submit Spree.t(:create), :class => 'btn btn-info btn-block ' %></p>
            </div>
          <% end %> 
          <div class="text-center extras-link">
            <span class="or-text"><%= Spree.t(:or) %> </span>
              <%= link_to Spree.t(:login_as_existing), spree.login_path %>
          </div>
          <div data-hook="login_extras"></div>
      </div>
  </div>
</div>
