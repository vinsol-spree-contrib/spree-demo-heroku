<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div class="col-md-6 col-md-offset-3 login-page" id="forgot-password">
  <div class="panel panel-default text-center">
    <div class="panel-heading form-heading texte-center">
      <h1 class="page-title"><%= Spree.t(:forgot_password) %></h1>
    </div>
    <div class="panel-body">
      <p><%= Spree.t(:instructions_to_reset_password) %></p>

      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
        <p>
          <%= f.label :email, Spree.t(:email) %>
          <%= f.email_field :email, :class => "form-control" %>
        </p>
        <p>
          <%= f.submit Spree.t(:reset_password), :class => 'btn btn-info btn-block' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
