      </div>
      <div class="col-md-7 col-sm-12">
        <div class="row">
          <div class="col-md-12">
            <% taxonomy = Spree::Taxonomy.first %>
            <h3><%= taxonomy.name %></h3>
              <ul class="footer-ul">
                <% taxonomy.root.children.each_with_index do |taxon, i| %>
                  <li>
                    <% if ( @body_id == 'home-page' ) %>
                      <%= link_to taxon.name, 't/' + taxon.permalink  %>
                    <% else %>
                      <%= link_to taxon.name %>
                    <% end %>
                  </li>
                <% end %>
              </ul>
          </div>
        </div>
      </div>
    </div>
