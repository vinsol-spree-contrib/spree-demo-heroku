<div class="col-md-6 col-md-offset-3 login-page ">
  <div class="panel panel-default text-center">
    <div class="panel-heading form-heading">
      <h3 class="page-title"><%= Spree.t(:editing_user) %></h3>
    </div>
    <div class="panel-body">
      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
      
      <%= form_for Spree::User.new, :as => @user, :url => spree.user_path(@user), :method => :put do |f| %>
        <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
        <p>
          <%= f.submit Spree.t(:update), :class => 'btn btn-info btn-block' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
