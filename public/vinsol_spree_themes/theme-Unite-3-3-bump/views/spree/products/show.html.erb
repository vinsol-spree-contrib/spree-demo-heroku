<% @body_id = 'product-details' %>

<% cache cache_key_for_product do %>
  <div data-hook="product_show" class="row" itemscope itemtype="https://schema.org/Product">
      <!-- Tab panes -->
    <div class="col-md-12 tab-content product-detail-tabs-content">
      <!-- product gallery -->
      <article role="tabpanel" class="tab-pane active" id="home">
        <div class="row">
          <div class="col-md-9 col-sm-12 col-xs-12">
            <div class="row">
              <div class="col-md-12 col-sm-12 col-xs-12">
                <h1 class="product-title" itemprop="name"><%= @product.name %></h1>
              </div>
              <div class="col-md-5 col-sm-5 col-xs-12 " data-hook="product_left_part">
                <div data-hook="product_left_part_wrap">
                  <div id="product-images" data-hook="product_images">
                    <div id="main-image" class="" data-hook>
                      <%= large_image(@product,  itemprop: "image", class: 'img-responsive') %>
                    </div>
                    <div id="thumbnails" data-hook>
                      <%= render partial: 'thumbnails' %>
                    </div>
                  </div>
                  
                </div>
              </div>
              <div class="col-md-7 col-sm-7  col-xs-12" data-hook="product_right_part">
                <div data-hook="product_right_part_wrap">
                  <div id="product-description" data-hook="product_description">
                    <div id="cart-form" data-hook="cart_form">
                      <%= render partial: 'cart_form' %>
                    </div>
                  </div>
                  <div class="row product-info-properties">
                    <div class="col-md-12">
                      <!-- Nav tabs -->
                      <ul class="nav nav-tabs product-detail-tabs" role="tablist">
                        <li role="presentation" class="active"><a href="#description" aria-controls="description" role="tab" data-toggle="tab">Description</a></li>
                        <li role="presentation" class="">
                          <a href="#properties" aria-controls="properties" role="tab" data-toggle="tab">Properties</a>
                        </li>
                        <li role="presentation" class="">
                          <a href="#promotions" aria-controls="promotions" role="tab" data-toggle="tab">Promotions</a>
                        </li>
                      </ul>

                      <div class=" tab-content product-detail-tabs-content">
                        <div role="tabpanel" class="tab-pane active" id="description" itemprop="description" data-hook="description">
                            <%= product_description(@product) %>
                        </div>
                        <div role="tabpanel" class="tab-pane " id="properties" itemprop="properties" data-hook="product_properties">
                            <%= render partial: 'properties' %>
                        </div>
                        <div  role="tabpanel" class="tab-pane " id="promotions" itemprop="promotions" data-hook="promotions">
                          <%= render partial: 'promotions' %>
                        </div>
                      </div>
                    </div>

                  </div>
                  
                </div>
              </div>
            </div>
          </div>
          <div id="taxon-crumbs" class=" col-md-2 col-sm-12 col-xs-12 pull-right " data-hook="product_taxons">
            <div class="row">
              <%= render partial: 'taxons' %>
            </div>
          </div>
        </div>
      </article>

      <!-- product detail ends -->
    </div>
   
  </div>
<% end %>
