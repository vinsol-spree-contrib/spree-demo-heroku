<%= form_for Spree::User.new, as: :spree_user, url: spree.create_new_session_path do |f| %>
  <fieldset id="password-credentials">
    <div class="login-form-row">
      <%= f.email_field :email, class: 'global-input', tabindex: 1, placeholder: Spree.t(:email) %>
    </div>
    <div class="login-form-row">
      <%= f.password_field :password, class: 'global-input', tabindex: 2, placeholder: Spree.t(:password) %>
    </div>
    <div class="login-form-row checkbox-row">
      <label>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, Spree.t(:remember_me) %>
      </label>
    </div>
    <div class="login-form-row button-row">
      <%= f.submit Spree.t(:login), class: 'button-primary', tabindex: 3 %>
    </div>
  </fieldset>
<% end %>
