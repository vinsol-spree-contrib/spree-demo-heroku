<% @body_id = 'edit-user' %>

<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title text-center"><%= Spree.t(:editing_user) %></h3>
    </div>
    <div class="panel-body">
      <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
      
      <%= form_for Spree::User.new, :as => @user, :url => spree.user_path(@user), :method => :put do |f| %>
        <%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
        <div class="hover-effect-1">
          <%#= f.submit Spree.t(:update), :class => 'btn btn-primary bg-orange' %>
          <%= button_tag(type: 'submit') do %>
            <span data-hover="Update"> Update</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
