<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<% @body_id = 'forgot-password' %>
<div class="row no-margin text-center">
  <div id="logo" class="text-center" data-hook>
    <%= logo %>
  </div>
</div>

<div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 text-center" id="forgot-password">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title"><%= Spree.t(:forgot_password) %></h3>
    </div>
    <div class="panel-body">
      <p ><%= Spree.t(:instructions_to_reset_password) %></p>

      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
        <p class="text-left">
          <div class="input-group">
            <span class="input-group-addon"><i class=" fa fa-user"></i></span>
            <%= f.email_field :email, :class => "form-control", :placeholder => Spree.t(:email) %>
          </div>
        </p>
        <div class="hover-effect-1">
          <%#= f.submit Spree.t(:reset_password), :class => 'btn btn-md btn-success  bg-orange' %>
          <%= button_tag(type: 'submit') do %>
            <span data-hover="Create"> Create</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
