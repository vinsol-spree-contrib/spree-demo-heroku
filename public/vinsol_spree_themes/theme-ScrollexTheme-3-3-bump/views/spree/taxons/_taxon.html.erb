<% i = taxon_counter %>
<div class="col-md-12 col-sm-12 col-xs-12 taxon" data-hook="taxon">
  <h5 class="subtaxon-title <%= 'active' if i == 0 %>" style="background-image: url(<%= asset_path("category/#{self.request.path.split('/')[-1]}/#{self.request.path.split('/')[-1]}#{ i }.jpg") %>)">
    <%= link_to taxon.name, seo_url(taxon), class: 'breadcrumbs' %>  </h5>
  <%= render partial: 'spree/shared/products', locals: { products: taxon_preview(taxon), taxon: taxon } %>

</div>
