<% @body_id = 'product-details' %>

<% cache cache_key_for_product do %>
  <div data-hook="product_show" class="row" itemscope itemtype="https://schema.org/Product">
    <div class="product-heading col-sm-12 text-center">
      <h1 class="product-title" itemprop="name"><%= @product.name %></h1>
    </div>
    <div class="col-sm-10 col-sm-offset-1" data-hook="product_left_part">
      <div data-hook="product_left_part_wrap">
        <!-- <div class="variant-dropdown"><i class="fa fa-filter"></i> Variant</div> -->

        <div id="product-images" data-hook="product_images">

          <div id="main-image" class="panel panel-default pull-right" data-hook>
            <div class="variant-dropdown"><span style="background-image: url(<%= asset_path('variant-icon.png') %>)"> Variants</span></div>
            <div class="panel-body text-center">
              <%= large_image(@product, itemprop: "image") %>
            </div>
          </div>
          <div id="thumbnails" class="" data-hook>
            <%= render partial: 'thumbnails' %>
          </div>
        </div>
        <div data-hook="promotions">
          <%= render partial: 'promotions' %>
        </div>
        <div id="cart-form" data-hook="cart_form">
          <%= render partial: 'cart_form' %>
        </div>
      </div>
    </div>

    <div class="col-sm-10 col-sm-offset-1" data-hook="product_right_part">
      <div data-hook="product_right_part_wrap">
        <div id="product-description" data-hook="product_description">
          <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#description" aria-controls="description" role="tab" data-toggle="tab">Description</a></li>
            <li role="presentation"><a href="#properties" aria-controls="properties" role="tab" data-toggle="tab">Additional Info</a></li>
          </ul>
          <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="description">
              <div class="" itemprop="description" data-hook="description">
                <%= product_description(@product) %>
              </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="properties">
              <div data-hook="product_properties">
                <%= render partial: 'properties' %>
              </div>
            </div>
          </div>

          <div id="taxon-crumbs" class=" five " data-hook="product_taxons">
            <%= render partial: 'taxons' %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
