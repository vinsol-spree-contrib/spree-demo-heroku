<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @spree_user } %>
<div class="col-md-6 col-md-offset-3" id="forgot-password">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="common-heading"><%= Spree.t(:forgot_password) %></h3>
      <p class="common-subheading text-center"><%= Spree.t(:instructions_to_reset_password) %></p>
    </div>
    <div class="panel-body">


      <%= form_for Spree::User.new, :as => :spree_user, :url => spree.reset_password_path do |f| %>
        <p>
          <%= f.label :email, Spree.t(:email) %>
          <%= f.email_field :email, :class => "form-control" %>
        </p>
        <p>
          <%= f.submit Spree.t(:reset_password), :class => 'btn btn-success btn-block text-uppercase' %>
        </p>
      <% end %>
    </div>
  </div>
</div>
